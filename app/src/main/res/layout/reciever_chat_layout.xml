<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="50dp"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_for_message"
        android:layout_alignParentStart="true"
        android:background="@drawable/reciver_chat_drawable">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_message"
            android:text="Sender Messages"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingLeft="7dp"
            android:paddingRight="40dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_time"
            android:textSize="10sp"
            android:layout_toRightOf="@id/sender_message"
            android:layout_marginLeft="-40dp"
            android:padding="7dp"
            android:textColor="#434343"
            android:text="12:00"
            android:layout_alignBottom="@id/sender_message"/>

    </RelativeLayout>



</RelativeLayout>